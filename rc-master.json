      "spec": {
        "containers": [
          {
            "name": "hadoop-master",
            "image": "172.30.7.23:5000/openshift/hadoop-master:0.1.0",
            "command": ["bash","-c","/root/start-ssh-serf.sh && sleep 365d"],
            "ports": [
              {
                "containerPort": 22,
                "protocol": "TCP"
              },{
                "containerPort": 7373,
                "protocol": "TCP"
              },{
                "containerPort": 7946,
                "protocol": "TCP"
              },{
                "containerPort": 9000,
