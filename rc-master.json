{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "hadoop-master",
    "creationTimestamp": null
  },
  "spec": {
    "strategy": {
    "type": "Recreate",
    "resources": {}
    },
    "triggers": [
      {
        "type": "ConfigChange"
      }
    ],
    "replicas": 1,
