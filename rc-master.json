              },{
                "containerPort": 50010,
                "protocol": "TCP"
              },{
                "containerPort": 50020,
                "protocol": "TCP"
              },{
                "containerPort": 50070,
                "protocol": "TCP"
              },{
                "containerPort": 50075,
                "protocol": "TCP"
              },{
                "containerPort": 50090,
                "protocol": "TCP"
              },{
                "containerPort": 50475,
                "protocol": "TCP"
              },{
                "containerPort": 8030,
                "protocol": "TCP"
              },{
                "containerPort": 8031,
                "protocol": "TCP"
              },{
                "containerPort": 8032,
                "protocol": "TCP"
